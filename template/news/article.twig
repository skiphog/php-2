{% extends "layout.twig" %}

{% block title %}{{ article.title }}{% endblock %}

{% block content %}
<div class="container">
    <h1>{{ article.title }}</h1>
    <hr>
    <div class="mb-3">{{ article.text|nl2br }}</div>
    <p><em>{{ article.author is empty ? "Нет автора" : "Автор: " ~ article.author.name }}</em></p>

    <div class="text-center">
        <a class="btn btn-outline-info" href="//php-2">Назад</a>
    </div>
</div>
{% endblock %}